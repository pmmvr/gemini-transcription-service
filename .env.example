# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
MODEL_NAME=gemini-2.5-flash-preview-04-17
TEMPERATURE=1.0
MAX_OUTPUT_TOKENS=32768

# Local Storage Configuration
OUTPUT_DIR=./transcripts
KEEP_LOCAL_AUDIO=false

# Summary Configuration
GENERATE_SUMMARY=false
SUMMARY_PATH=./summaries

# Web App Configuration
PORT=5000
HOST=0.0.0.0
DEBUG=false

# --- Optional: Google Cloud Storage Configuration ---

# Google Cloud Storage Configuration for Transcripts
TRANSCRIPT_STORAGE_ENABLED=false
TRANSCRIPT_BUCKET_NAME=your-gcs-bucket-name
TRANSCRIPT_PATH_PREFIX=transcripts/

# Google Cloud Storage Configuration for Audio Files
AUDIO_STORAGE_ENABLED=false
AUDIO_BUCKET_NAME=your-audio-bucket-name
AUDIO_PATH_PREFIX=audio/

# Google Cloud Storage Configuration for Summaries
SUMMARY_STORAGE_ENABLED=false
SUMMARY_BUCKET_NAME=your-gcs-bucket-name
SUMMARY_PATH_PREFIX=summaries/

# Google Cloud Authentication
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json